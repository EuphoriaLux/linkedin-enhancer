{
  "manifest_version": 3,
  "name": "LinkedIn Enhancer",
  "version": "1.0",
  "description": "Enhance your LinkedIn experience",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "action": {
    "default_title": "LinkedIn Enhancer"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content_scripts/content.js"]
    }
  ]
}
