{
  "manifest_version": 3,
  "name": "LinkedIn Enhancer",
  "version": "0.1.0",
  "description": "Enhances the LinkedIn user interface.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LinkedIn Enhancer"
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": ["assets/images/icon16.png", "assets/images/icon48.png", "assets/images/icon128.png", "api/api-service.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ],
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "author": "Twisto",
  "minimum_chrome_version": "88"
}
